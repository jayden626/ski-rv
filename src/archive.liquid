---
title: Archive
layout: main
pagination:
  data: collections.post
  size: 2
  alias: posts
  reverse: true
---

{% for post in posts %}
  <p>
    <a href="{{post.url}}">{{ post.data.title }}</a> - {{ post.date | niceDate }}
    <br/>
    {% excerpt post %}
  </p>
{% endfor %}

<p>
  {% if pagination.href.previous %}
    <a href=" {{ pagination.href.previous }}">Previous</a>
  {% else %}
    Previous
  {% endif %}
  /
  {% if pagination.href.next %}
    <a href=" {{ pagination.href.next }}">Next</a>
  {% else %}
    Next
  {% endif %}
</p>